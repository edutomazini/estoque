@model WebEstoque.LstProdutos
@{
    ViewBag.Title = "List";
}

<h2>Produtos</h2>

<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Quantidade
        </th>
        <th>
            Categoria
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Produtos)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeProduto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.NomeCategoria)
        </td>
    </tr>
    }

</table>
